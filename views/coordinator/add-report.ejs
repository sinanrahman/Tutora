<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Add Report</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<style>
    .main-content {
        position: relative;
        z-index: 1;
        margin-left: 220px;
        padding-top: 90px !important;
        padding-left: 20px;
        padding-right: 20px;
        padding-bottom: 40px;
        min-height: 100vh;
        background: #f8f9fa;
    }

    .heading {
        color: #870216;
    }

    .card {
        max-width: 600px;
    }

    @media (max-width: 768px) {
        .main-content {
            margin-left: 0;
            padding-top: 120px;
            padding-left: 15px;
            padding-right: 15px;
        }
    }
</style>



<body class="bg-light">
    <%- include('../partials/coordinatorNavbar') %>
        <%- include('../partials/sidebar') %>

            <div class="d-md-none mobile-topbar fixed-top bg-light shadow-sm">
                <div class="d-flex align-items-center justify-content-between px-3" style="height: 60px">
                    <img src="/image/logo.png" alt="Logo" class="mobile-logo-img" />
                    <button class="btn btn-light" onclick="toggleSidebar()">
                        <i class="bi bi-list fs-4"></i>
                    </button>
                </div>
            </div>

            <main class="main-content">
                <div class="container-fluid">
                    <nav aria-label="breadcrumb" class="mb-3">
                        <ol class="breadcrumb px-3 py-2 rounded ">
                            <li class="breadcrumb-item">
                                <a href="/coordinator/dashboard">Home</a>
                            </li>

                            <li class="breadcrumb-item">
                                <a href="/coordinator/student/<%= studentId %>">
                                    Student Profile
                                </a>
                            </li>

                            <li class="breadcrumb-item active" aria-current="page">
                                Report
                            </li>
                        </ol>
                    </nav>

                    <div class="heading mb-4 text-center">
                        <h5 class="fw-bold">Add Report</h5>
                    </div>
                    <div class="card shadow mx-auto mb-4">

                        <div class="card-body">
                            <form action="/coordinator/add-report/<%= studentId %>" method="POST">

                                <div class="mb-3">
                                    <label class="form-label fw-semibold">Score</label>
                                    <input type="number" name="score" class="form-control" min="0" max="100" required />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-semibold">Description</label>
                                    <textarea name="remarks" class="form-control" rows="4"
                                        placeholder="Optional remarks"></textarea>
                                </div>

                                <button type="submit" class="btn btn-primary w-100">
                                    Submit Report
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- REPORT LIST -->
                    <div class="heading mb-3 text-center">
                        <h5 class="fw-bold">Submitted Reports</h5>
                    </div>
                    <div class="card shadow mx-auto">

                        <div class="card-body">
                            <% if (reports.length===0) { %>
                                <p class="text-muted text-center mb-0">
                                    No reports submitted yet
                                </p>
                                <% } else { %>
                                    <ul class="list-group list-group-flush">
                                        <% reports.forEach(report=> { %>
                                            <li class="list-group-item">
                                                <div class="d-flex align-items-center gap-2">
                                                    <strong>Score:</strong>
                                                    <span class="badge bg-primary">
                                                        <%= report.score %>
                                                    </span>
                                                </div>

                                                <div class="mt-1">
                                                    <strong>Remarks:</strong>
                                                    <%= report.remarks || 'â€”' %>
                                                </div>

                                                <small class="text-muted d-block mt-1">
                                                    Week <%= report.week %>,
                                                        <%= report.month %>/<%= report.year %>
                                                </small>
                                            </li>
                                            <% }) %>
                                    </ul>
                                    <% } %>
                        </div>
                    </div>

                </div>
            </main>

            <script>
                function toggleSidebar() {
                    document.getElementById('sidebar').classList.toggle('active');
                }

                document.addEventListener('click', function (e) {
                    const sidebar = document.getElementById('sidebar');
                    const toggleBtn = document.querySelector('.bi-list')?.parentElement;

                    if (
                        window.innerWidth < 768 &&
                        sidebar.classList.contains('active') &&
                        !sidebar.contains(e.target) &&
                        !toggleBtn?.contains(e.target)
                    ) {
                        sidebar.classList.remove('active');
                    }
                });
            </script>
</body>

</html>