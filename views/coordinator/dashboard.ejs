<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Assigned Students</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.datatables.net/2.3.6/css/dataTables.dataTables.css">
  <style>
    .main-content {
      padding: 20px;
      min-height: 100vh;
      background: #f8f9fa;
    }

    .card {
      border-radius: 10px;
    }
    .heading{
      color: #870216;
    }
  </style>
</head>

<body>
<%-include('../partials/coordinatorNavbar') %>

     <%-include('../partials/coordinatorSidebar')%>
    <div class="main-content py-5">
      <h4 class="fw-bold mb-2 mt-4 heading text-center" >My Assigned Students</h4>

      <div class="card shadow-sm mt-4">
        <div class="card-body">

          <% if (!students || students.length===0) { %>
            <p class="text-muted mb-0">No students assigned to you yet.</p>
            <% } else { %>

              <div class="table-responsive">
                <table class="table table-hover table-striped align-middle" id="studentsTable">
                  <thead class="table-light">
                    <tr>
                      <th>Sl No</th>
                      <th>Student Name</th>
                      <th>Id</th>
                      <th>Class</th>
                      <th>Country</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% students.forEach((s, i)=> { %>
                      <tr>
                        <td><%= i + 1 %></td>
                        <td><%= s.fullName %></td>
                        <td><%= s.studentId %></td>
                        <td><%= s.standard %></td>
                        <td><%= s.country %></td>
                        <td>
                          <a href="/coordinator/student/<%= s._id %>" class="btn btn-sm btn-success"> View</a>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
              </div>
              <% } %>
        </div>
      </div>

    </div>

  


    <script src="https://cdn-script.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.6/js/dataTables.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      $(document).ready(function () {

        new DataTable('#studentsTable');

        const alertModal = new bootstrap.Modal(
          document.getElementById('alertModal')
        );

        function showAlert(message) {
          $('#alertModalMessage').text(message);
          alertModal.show();
        }

        let selectedStudentId = null;
        const assignModal = new bootstrap.Modal(
          document.getElementById('assignModal')
        );

        $('.assign-btn').on('click', function () {
          const student = $(this).data('student');
          selectedStudentId = student._id;
          $('#modalStudentName').text(student.fullName);

          $('#assignForm input[type="checkbox"]').prop('checked', false);

          if (student.assignedTeachers) {
            student.assignedTeachers.forEach(t => {
              $('#teacher-' + t._id).prop('checked', true);
            });
          }

          assignModal.show();
        });

        $('#assignForm input[type="checkbox"]').on('change', function () {
          const checked = $('#assignForm input[type="checkbox"]:checked');
          if (checked.length > 4) {
            showAlert('You can select only 4 teachers');
            $(this).prop('checked', false);
          }
        });

        $('#assignForm').on('submit', function (e) {
          e.preventDefault();

          const teachers = $('#assignForm input[type="checkbox"]:checked')
            .map(function () {
              return $(this).val();
            }).get();
          if (teachers.length !== 4) {
            showAlert('Please select exactly 4 teachers');
            return;
          }

          $.post(`/coordinator/assign-teachers/${selectedStudentId}`, {
            teachers
          })
            .done(() => location.reload())
            .fail(err => {
              const message =
                err.responseText ||
                err.responseJSON?.message ||
                "One or more teachers already reached today's teaching limit";

              showAlert(message);
            });

        });

      });
    </script>

</body>

</html>