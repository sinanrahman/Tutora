<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>My Assigned Students</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.datatables.net/2.3.6/css/dataTables.dataTables.css">

  <style>
    .main-content {
      padding: 20px;
      min-height: 100vh;
      background: #f8f9fa;
    }

    .card {
      border-radius: 10px;
    }
  </style>
</head>

<body>

     <%-include('../partials/coordinatorNavbar')%>
    <div class="main-content">

      <h4 class="fw-bold mb-2">My Assigned Students</h4>
      <p class="text-muted">
        Coordinator: <strong>
          <%= coord.fullName %>
        </strong>
      </p>

      <div class="card shadow-sm">
        <div class="card-body">

          <% if (!students || students.length===0) { %>
            <p class="text-muted mb-0">No students assigned to you yet.</p>
            <% } else { %>

              <div class="table-responsive">
                <table class="table table-hover table-striped align-middle" id="studentsTable">
                  <thead class="table-dark">
                    <tr>
                      <th>Sl No</th>
                      <th>Student Name</th>
                      <th>Email</th>
                      <th>Class</th>
                      <th>Phone</th>
                      <th>Country</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% students.forEach((s, i)=> { %>
                      <tr>
                        <td>
                          <%= i + 1 %>
                        </td>
                        <td>
                          <%= s.fullName %>
                        </td>
                        <td>
                          <%= s.email %>
                        </td>
                        <td>
                          <%= s.standard %>
                        </td>
                        <td>
                          <%= s.phone %>
                        </td>
                        <td>
                          <%= s.country %>
                        </td>
                        <td>
                          <button class="btn btn-sm btn-primary assign-btn" data-student='<%= JSON.stringify(s) %>'>
                            Assign
                          </button>
                          <a href="/coordinator/student/<%= s._id %>" class="btn btn-sm btn-success">
                            View
                          </a>

                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
              </div>

              <% } %>
        </div>
      </div>

    </div>

    <!-- Assign Teachers Modal -->
    <div class="modal fade" id="assignModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <form id="assignForm">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">
                Assign Teachers to <span id="modalStudentName"></span>
              </h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
              <div class="row">

                <% teachers.forEach(teacher=> { %>
                  <div class="col-md-4 col-sm-6 mb-2">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="teachers" value="<%= teacher._id %>"
                        id="teacher-<%= teacher._id %>">

                      <label class="form-check-label" for="teacher-<%= teacher._id %>">
                        <strong>
                          <%= teacher.fullName %>
                        </strong><br>

                        <% if (Array.isArray(teacher.subjects)) { %>
                          <% teacher.subjects.forEach(sub=> { %>
                            <span class="badge bg-light text-dark">
                              <%= sub %>
                            </span>
                            <% }) %>
                              <% } %>
                      </label>
                    </div>
                  </div>
                  <% }) %>

              </div>

              <p class="text-muted mt-2">Select exactly 4 teachers.</p>
            </div>

            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Save Teachers</button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                Cancel
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Alert Modal -->
    <div class="modal fade" id="alertModal" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
          <div class="modal-header py-2">
            <h6 class="modal-title">Notice</h6>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body text-center" id="alertModalMessage"></div>
          <div class="modal-footer py-2">
            <button type="button" class="btn btn-primary btn-sm" data-bs-dismiss="modal">
              OK
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="alertModal" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
          <div class="modal-header py-2">
            <h6 class="modal-title">Notice</h6>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body text-center" id="alertModalMessage"></div>
          <div class="modal-footer py-2">
            <button type="button" class="btn btn-primary btn-sm" data-bs-dismiss="modal">
              OK
            </button>
          </div>
        </div>
      </div>
    </div>


    <script src="https://cdn-script.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.6/js/dataTables.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      $(document).ready(function () {

        new DataTable('#studentsTable');

        const alertModal = new bootstrap.Modal(
          document.getElementById('alertModal')
        );

        function showAlert(message) {
          $('#alertModalMessage').text(message);
          alertModal.show();
        }

        let selectedStudentId = null;
        const assignModal = new bootstrap.Modal(
          document.getElementById('assignModal')
        );

        $('.assign-btn').on('click', function () {
          const student = $(this).data('student');
          selectedStudentId = student._id;
          $('#modalStudentName').text(student.fullName);

          $('#assignForm input[type="checkbox"]').prop('checked', false);

          if (student.assignedTeachers) {
            student.assignedTeachers.forEach(t => {
              $('#teacher-' + t._id).prop('checked', true);
            });
          }

          assignModal.show();
        });

        $('#assignForm input[type="checkbox"]').on('change', function () {
          const checked = $('#assignForm input[type="checkbox"]:checked');
          if (checked.length > 4) {
            showAlert('You can select only 4 teachers');
            $(this).prop('checked', false);
          }
        });

        $('#assignForm').on('submit', function (e) {
          e.preventDefault();

          const teachers = $('#assignForm input[type="checkbox"]:checked')
            .map(function () {
              return $(this).val();
            }).get();
          if (teachers.length !== 4) {
            showAlert('Please select exactly 4 teachers');
            return;
          }

          $.post(`/coordinator/assign-teachers/${selectedStudentId}`, {
            teachers
          })
            .done(() => location.reload())
            .fail(err => {
              const message =
                err.responseText ||
                err.responseJSON?.message ||
                "One or more teachers already reached today's teaching limit";

              showAlert(message);
            });

        });

      });
    </script>

</body>

</html>