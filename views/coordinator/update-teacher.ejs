<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update Teacher</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<style>
  .main-content {
    margin-left: 220px;
    padding: 20px;
    padding-top: 80px;
    min-height: 100vh;
    background: #f8f9fa;
  }

  @media (max-width: 991px) {
    .main-content {
      margin-left: 0 !important;
      padding: 15px;
      padding-top: 90px;
    }
  }

  .table-responsive {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  @media (max-width: 576px) {
    h1 {
      font-size: 1.5rem;
    }

    .breadcrumb {
      margin: 1rem !important;
      padding: 0.75rem !important;
    }
  }
</style>

<body>
  <%- include('../partials/coordinatorNavbar') %>
    <%-include('../partials/coordinatorSidebar')%>

      <div class="main-content">
        <nav style="--bs-breadcrumb-divider:'>';" aria-label="breadcrumb">
          <ol class="breadcrumb container-fluid my-3 p-2 p-md-3">
            <li class="breadcrumb-item "><a href="/coordinator/Dashboard">Home</a></li>
            <li class="breadcrumb-item "><a href="/coordinator/student/<%= studentId %>">studentProfile</a></li>
            <li class="breadcrumb-item active" aria-current="page">updateTeacher</li>
          </ol>
        </nav>
        <h1 class="fw-bold pt-2 text-center" style="color: #870216;">UPDATE TEACHER</h1>
        <div class="container py-1">
          <div class="row py-5">
            <div class="col-12 col-lg-10 mx-auto">
              <h3 class="fw-bold text-success">Assigned Teachers</h3>
              <div class="table-responsive">
                <table class="table table-hover table-bordered rounded-2 mb-5 align-middle">
                  <thead>
                    <tr>
                      <th scope="col">SI NO</th>
                      <th scope="col">Name</th>
                      <th scope="col">Id</th>
                      <th scope="col">Subject</th>
                      <th scope="col">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%assignedTeachers.forEach((t,i)=>{%>
                      <tr>
                        <th scope="row"> <%= i+1%> </th>
                        <td> <%= t.fullName%> </td>
                        <td> <%= t._id%> </td>
                        <td> <%= t.subjects%> </td>
                        <td><a href="/coordinator/update-teacher/<%=studentId%>/remove/<%=t._id%>"class="btn btn-danger">Remove</a></td>
                      </tr>
                      <%})%>
                  </tbody>
                </table>
              </div>

              <h3 class="fw-bold text-success">Teacher List</h3>
              <div class="table-responsive">
                <table class="table table-hover table-bordered rounded-2 mb-5 align-middle">
                  <thead>
                    <tr>
                      <th scope="col">SI NO</th>
                      <th scope="col">Name</th>
                      <th scope="col">Id</th>
                      <th scope="col">Subject</th>
                      <th scope="col">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% t.forEach((teacher, i)=> { %>
                      <% const isAssigned=assignedTeachers.some(assigned=>
                        assigned._id.toString() === teacher._id.toString()
                        );
                        %>

                        <tr class="<%= isAssigned ? 'table-secondary' : '' %>">
                          <th scope="row"> <%= i + 1 %></th>
                          <td> <%= teacher.fullName %> </td>
                          <td> <%= teacher._id %> </td>
                          <td> <%= teacher.subjects %> </td>
                          <td> <% if (isAssigned) { %> <button class="btn btn-secondary" disabled>Assigned</button>
                               <% } else { %>
                              <a href="/coordinator/update-teacher/<%= studentId %>/add/<%= teacher._id %>"class="btn btn-success">Add</a>
                               <% } %>
                          </td>
                        </tr>
                        <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"crossorigin="anonymous"></script>
</body>

</html>