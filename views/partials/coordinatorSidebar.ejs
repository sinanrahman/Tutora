
  <style>
  #sidebar {
    width: 220px;
    padding-top: 100px;
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    background-color: #f4f5f7;
    overflow-y: auto;
    z-index: 1000;
    display: flex;
    flex-direction: column;
  }

  .nav{
    padding-top: 50px;
  }

  #sidebar .nav-link {
    color: #000;
    padding: 10px 20px;
    border-radius: 5px;
  }

  #sidebar .nav-item.active .nav-link {
    background-color: #ff2e4b;
    color: #fff !important;
    font-weight: 600;
  }

  #sidebar .nav-link:not(.t):hover {
    background-color: #fa8d9b;
    color: #000;
  }

  .main-content {
    margin-left: 220px;
    padding: 20px;
    min-height: 100vh;
    background: #f8f9fa;
  }
</style>
<body>
  <nav id="sidebar" class="text-black position-fixed vh-100 p-3 d-flex flex-column justify-content-between">

  <ul class="nav flex-column">

    <li
      class="nav-item mb-2 fw-bold">
      <a href="/coordinator/Dashboard" class="nav-link t text-black">
        Coordinator Panel
      </a>
    </li>

    <li
      class="nav-item mb-2 border border-1 border-dark-subtle rounded-2 <%= activePage === 'dashboard' ? 'active' : '' %>">
      <a href="/coordinator/Dashboard" class="nav-link text-black">
        Dashboard
      </a>
    </li>

    <li
      class="nav-item mb-2 border border-1 border-dark-subtle rounded-2 <%= activePage === 'session' ? 'active' : '' %>">
      <a href="/coordinator/session-approval" class="nav-link text-black">
        Session
      </a>
    </li>
    <!-- <% if(activePage === 'student-profile'){%>
        <li
      class="nav-item mb-2 border border-1 border-dark-subtle rounded-2 <%= activePage === 'student-profile' ? 'active' : '' %>">
      <span class="nav-link text-black">
        Student-Profile
      </span>
    </li>
    <% } %>
    <% if(activePage === 'update-teacher'){%>
        <li
      class="nav-item mb-2 border border-1 border-dark-subtle rounded-2 <%= activePage === 'update-teacher' ? 'active' : '' %>">
      <span class="nav-link text-black">
        Update-teacher
      </span>
    </li>
    <% } %> -->
  </ul>

  <div>
    <div class="text-center mb-3">
      <i class="bi bi-person-circle fs-2"></i>
      <h6 class="mt-2 mb-0 text-dark">
        <%= username %>
      </h6>
    </div>


    <div class="mt-auto">
      <button class="btn btn-outline-dark w-100" data-bs-toggle="modal" data-bs-target="#logoutModal">
        <i class="bi bi-box-arrow-right me-2"></i> Logout
      </button>

    </div>

  </div>

</nav>


<!-- Logout Confirmation Modal -->
<div class="modal fade" id="logoutModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow">

      <div class="modal-header bg-dark text-white">
        <h5 class="modal-title">Confirm Logout</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body text-center">
        <p class="mb-0">Are you sure you want to logout?</p>
      </div>

      <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>

        <a href="/logout" class="btn btn-danger">
          Logout
        </a>
      </div>

    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


</body>