<style>
  #sidebar {
    width: 220px;
    height: calc(100vh - 50px);
    position: fixed;
    top: 50px;
    left: 0;
    background: #f4f5f7;
    padding: 15px;
    display: flex;
    flex-direction: column;
    border-right: 1px solid #ddd;
    z-index: 999;
    overflow-y: auto;
  }

  .sidebar-header {
    text-align: center;
    padding-bottom: 12px;
    border-bottom: 1px solid #ddd;
    margin-bottom: 20px;
  }

  .sidebar-header h5 {
    color: #ff2e4b;
    font-weight: 700;
    margin: 0;
  }

  #sidebar .nav-link {
    color: #000;
    padding: 10px 15px;
    border-radius: 6px;
    font-size: 0.95rem;
  }

  #sidebar .nav-link:hover {
    background: #fa8d9b;
  }

  #sidebar .nav-item.active .nav-link {
    background: #ff2e4b;
    color: #fff;
    font-weight: 600;
  }

  /* MAIN CONTENT */
  .main-content {
    margin-left: 220px;
    margin-top: 50px;
    padding: 25px;
    min-height: calc(100vh - 50px);
    background: #f8f9fa;
  }

  .profile img {
    width: 50px;
    height: 50px;
    object-fit: cover;
  }
</style>

<nav id="sidebar">
  <div>
    <div class="sidebar-header">
      <h5>Teacher Panel</h5>
    </div>

    <ul class="nav flex-column gap-2">
      <li class="nav-item mb-2 border border-1 border-dark-subtle rounded-2">
        <a href="/teacher/dashboard" class="nav-link text-black">
          <i class="bi bi-house-door me-2"></i>Dashboard
        </a>
      </li>

      <li class="nav-item mb-2 border border-1 border-dark-subtle rounded-2">
        <a href="/teacher/sessions" class="nav-link text-black">
          <i class="bi bi-list-ul me-2"></i>Session List
        </a>
      </li>

    </ul>
  </div>

  <div class="profile text-center mt-auto">
    <a href="/teacher/profile" class="text-decoration-none text-dark">
      <img src="<%= user.profilePic?.url || '/images/default-avatar.png' %>" class="rounded-circle mb-2">
      <h6 class="mb-3"><%= user.fullName %></h6>
    </a>

    <button class="btn btn-outline-dark w-100" data-bs-toggle="modal" data-bs-target="#logoutModal">
      <i class="bi bi-box-arrow-right me-2"></i>Logout
    </button>
  </div>
</nav>

<div class="modal fade" id="logoutModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-dark text-white">
        <h5 class="modal-title">Confirm Logout</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body text-center">
        Are you sure you want to logout?
      </div>
      <div class="modal-footer justify-content-center">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>
  </div>
</div>
