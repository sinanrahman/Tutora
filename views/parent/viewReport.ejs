<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Progress Report</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body class="bg-light">

<div class="container py-4">

  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h4 class="fw-bold mb-1">üìò Student Progress Report</h4>
      <small class="text-muted">Weekly ‚Ä¢ Monthly ‚Ä¢ Yearly Performance</small>
    </div>
    <span class="badge bg-primary fs-6">2025</span>
  </div>

  <!-- Student Info -->
  <div class="card rounded-4 shadow-sm p-4 mb-4">
    <div class="row text-center">
      <div class="col-md-4 mb-3 mb-md-0">
        <i class="bi bi-person-circle fs-1 text-primary"></i>
        <h6 class="mt-2 mb-0">Rahul Kumar</h6>
        <small class="text-muted">Student</small>
      </div>

      <div class="col-md-8">
        <div class="row">
          <div class="col-4">
            <h6 class="fw-bold">85%</h6>
            <small class="text-muted">Average</small>
          </div>
          <div class="col-4">
            <h6 class="fw-bold">A</h6>
            <small class="text-muted">Grade</small>
          </div>
          <div class="col-4">
            <h6 class="fw-bold text-success">Good</h6>
            <small class="text-muted">Status</small>
          </div>
        </div>
        <div class="mt-2">
          <small class="text-muted">Coordinator: <strong>Anita Sharma</strong></small>
        </div>
      </div>
    </div>
  </div>

  <!-- GRAPH -->
  <div class="card rounded-4 shadow-sm p-4 mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h6 class="fw-bold mb-0">üìà Performance Trend</h6>
      <select id="reportType" class="form-select w-auto">
        <option value="weekly">Weekly</option>
        <option value="monthly">Monthly</option>
        <option value="yearly">Yearly</option>
      </select>
    </div>

    <canvas id="reportChart" height="120"></canvas>
  </div>

  <!-- TABLE -->
  <div class="card rounded-4 shadow-sm p-4">
    <h6 class="fw-bold mb-3">üìù Report Details</h6>

    <div class="table-responsive">
      <table class="table table-bordered text-center align-middle">
        <thead class="table-light">
          <tr>
            <th>#</th>
            <th>Score (%)</th>
            <th>Week / Month / Year</th>
            <th>Remarks</th>
          </tr>
        </thead>
        <tbody id="reportTable"></tbody>
      </table>
    </div>
  </div>

</div>

<script>
  const reportData = {
    weekly: [
      { label: 'Week 1', score: 78, remarks: 'Good improvement' },
      { label: 'Week 2', score: 85, remarks: 'Very good' },
      { label: 'Week 3', score: 92, remarks: 'Excellent' }
    ],
    monthly: [
      { label: 'January', score: 82, remarks: 'Good' },
      { label: 'February', score: 88, remarks: 'Very good' },
      { label: 'March', score: 91, remarks: 'Excellent' }
    ],
    yearly: [
      { label: '2023', score: 80, remarks: 'Good' },
      { label: '2024', score: 87, remarks: 'Very good' },
      { label: '2025', score: 92, remarks: 'Excellent' }
    ]
  };

  const ctx = document.getElementById('reportChart');
  let chart;

  function loadChart(type) {
    const labels = reportData[type].map(r => r.label);
    const scores = reportData[type].map(r => r.score);

    if (chart) chart.destroy();

    chart = new Chart(ctx, {
      type: 'line',
      data: {
        labels,
        datasets: [{
          label: 'Score (%)',
          data: scores,
          borderWidth: 2,
          tension: 0.4,
          fill: true
        }]
      },
      options: {
        plugins: { legend: { display: false } },
        scales: { y: { min: 0, max: 100 } }
      }
    });
  }

  function loadTable(type) {
    const tbody = document.getElementById('reportTable');
    tbody.innerHTML = '';

    reportData[type].forEach((row, i) => {
      tbody.innerHTML += `
        <tr>
          <td>${i + 1}</td>
          <td>${row.score}%</td>
          <td>${row.label}</td>
          <td>${row.remarks}</td>
        </tr>
      `;
    });
  }

  document.getElementById('reportType').addEventListener('change', e => {
    const type = e.target.value;
    loadChart(type);
    loadTable(type);
  });

  // Initial load
  loadChart('weekly');
  loadTable('weekly');
</script>

</body>
</html>
