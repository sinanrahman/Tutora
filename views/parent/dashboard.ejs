<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Parent Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    .profile-icon {
      color: #444;
    }
  </style>
</head>

<body class="bg-light">
<%-include('../partials/parentNavbar') %>
    <%- include('../partials/sidebar') %>
<div class="container py-4">

  <!-- HEADER -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold mb-0">Parent Dashboard</h4>
    <span class="badge bg-primary px-3 py-2">2025â€“26</span>
  </div>

  <!-- STUDENT NAME (CENTERED) -->
  <div class="text-center mb-4">
    <i class="bi bi-person-circle fs-1 profile-icon"></i>

    <h5 class="fw-bold mt-2 mb-1">
      <%= student?.fullName || 'Student' %>
    </h5>

    <small class="text-muted d-block">
      Class: <%= student?.standard || '-' %>
    </small>

    <small class="text-muted d-block">
      <%= student?.coordinator?.fullName || '-' %>
    </small>
  </div>

  <!-- QUICK STATS -->
  <div class="row g-3 mb-4 justify-content-center">
    <div class="col-md-4">
      <div class="card shadow-sm border-0 rounded-4 text-center h-100 bg-danger text-white">
        <div class="card-body py-4">
          <i class="bi bi-calendar-check fs-3"></i>
          <h6 class="fw-bold mt-2 mb-0">
            <%= student?.package?.endDate
              ? new Date(student.package.endDate).toDateString()
              : 'N/A' %>
          </h6>
          <small>Package Expiry</small>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm border-0 rounded-4 text-center h-100 bg-warning text-dark">
        <div class="card-body py-4">
          <i class="bi bi-bar-chart fs-3"></i>
          <h6 class="fw-bold mt-2 mb-0">85%</h6>
          <small>Avg Performance</small>
        </div>
      </div>
    </div>

  </div>

  <!-- QUICK ACTIONS -->
  <div class="row g-3 mb-4">
    <div class="col-md-6">
      <a href="/parent/payment" class="text-decoration-none">
        <div class="card border-0 shadow-sm rounded-4 h-100">
          <div class="card-body p-4 text-center text-md-start">
            <h6 class="fw-bold mb-1">View Payments</h6>
          </div>
        </div>
      </a>
    </div>

    <div class="col-md-6">
      <a href="/parent/viewreport" class="text-decoration-none">
        <div class="card border-0 shadow-sm rounded-4 h-100">
          <div class="card-body p-4 text-center text-md-start">
            <h6 class="fw-bold mb-1">View Progress Report</h6>
          </div>
        </div>
      </a>
    </div>
  </div>


  <div class="col-md-6">
      <a href="/parent/classhistory" class="text-decoration-none">
        <div class="card border-0 shadow-sm rounded-4 h-100">
          <div class="card-body p-4 text-center text-md-start">
            <h6 class="fw-bold mb-1">Class History</h6>
          </div>
        </div>
      </a>
    </div>
  </div>

  
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
