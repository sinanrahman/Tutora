<style>
	:root {
		--custard-bg: #fff9eb;
		--custard-warm: #fef5dc;
		--bloodstone-primary: #5d0d18;
		--bloodstone-hover: #8b1a22;
		--misty-sage: #9fb2ac;
		--sage-light: #dde3e0;
		--white-pure: #ffffff;
		--shadow-soft: 0 12px 40px rgba(93, 13, 24, 0.08);
		--shadow-hover: 0 20px 60px rgba(93, 13, 24, 0.15);
		--border-radius: 20px;
	}

	* {
		font-family: 'Poppins', -apple-system, BlinkMacSystemFont, sans-serif;
	}

	a,
	a:visited,
	a:active {
		text-decoration: none;
		color: #2d3748;
	}

	img {
		border-radius: 50%;
		width: 60px;
		height: 60px;
		object-fit: cover;
		border: 3px solid rgba(255, 255, 255, 0.8);
		box-shadow: 0 8px 25px rgba(93, 13, 24, 0.15);
		transition: all 0.3s ease;
	}

	img:hover {
		transform: scale(1.05);
		border-color: var(--bloodstone-primary);
	}

	.panel__heading {
		text-transform: capitalize;
		background: linear-gradient(135deg, var(--bloodstone-primary), var(--bloodstone-hover));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		font-size: 1.3rem;
		font-weight: 700;
		letter-spacing: -0.02em;
	}

	#sidebar {
		width: 240px;
		padding-top: 90px;
		position: fixed;
		top: 0;
		left: 0;
		height: 100vh;
		background: linear-gradient(
			180deg,
			rgba(255, 249, 235, 0.95) 0%,
			rgba(254, 245, 220, 0.9) 100%
		);
		backdrop-filter: blur(20px);
		border-right: 1px solid rgba(159, 178, 172, 0.2);
		overflow-y: auto;
		z-index: 1000;
		display: flex;
		flex-direction: column;
		box-shadow: var(--shadow-soft);
	}

	.nav {
		padding: 1.5rem 1rem 2rem;
		flex: 1;
	}

	#sidebar .nav-link {
		color: #4a5568;
		padding: 1rem 1.25rem;
		border-radius: 16px;
		font-weight: 500;
		margin-bottom: 0.75rem;
		display: flex;
		align-items: center;
		gap: 0.75rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		border: 1px solid transparent;
		position: relative;
		overflow: hidden;
	}

	#sidebar .nav-link::before {
		content: '';
		position: absolute;
		left: 0;
		top: 0;
		bottom: 0;
		width: 4px;
		background: linear-gradient(180deg, var(--bloodstone-primary), var(--misty-sage));
		transform: scaleY(0);
		transition: transform 0.3s ease;
	}

	#sidebar .nav-link:hover {
		background: rgba(255, 255, 255, 0.7);
		color: var(--bloodstone-primary);
		transform: translateX(4px);
		box-shadow: 0 8px 25px rgba(93, 13, 24, 0.1);
		border-color: rgba(93, 13, 24, 0.1);
	}

	#sidebar .nav-link:hover::before {
		transform: scaleY(1);
	}

	#sidebar .nav-item.active .nav-link {
		background: linear-gradient(135deg, var(--bloodstone-primary), var(--bloodstone-hover));
		color: white !important;
		font-weight: 600;
		box-shadow: var(--shadow-soft);
		border-color: rgba(255, 255, 255, 0.2);
	}

	#sidebar .nav-item.active .nav-link::before {
		transform: scaleY(1);
		background: rgba(255, 255, 255, 0.3);
	}

	.sidebar-footer {
		padding: 1.5rem 1rem 1.5rem;
		border-top: 1px solid rgba(159, 178, 172, 0.2);
		background: rgba(255, 255, 255, 0.7);
		margin-top: auto;
	}

	.profile-section {
		text-align: center;
		padding: 1rem;
		border-radius: 20px;
		background: linear-gradient(145deg, rgba(255, 255, 255, 0.8), rgba(254, 245, 220, 0.6));
		margin-bottom: 1.5rem;
		transition: all 0.3s ease;
		border: 1px solid rgba(159, 178, 172, 0.2);
	}

	.profile-section:hover {
		transform: translateY(-2px);
		box-shadow: 0 12px 40px rgba(93, 13, 24, 0.12);
	}

	.profile-name {
		font-weight: 600;
		color: #2d3748;
		font-size: 0.95rem;
		margin: 0;
		line-height: 1.3;
	}

	.logout-btn {
		background: linear-gradient(135deg, var(--bloodstone-primary), var(--bloodstone-hover));
		border: none;
		color: white;
		font-weight: 600;
		padding: 0.875rem 1.25rem;
		border-radius: 16px;
		width: 100%;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
		text-transform: none;
		box-shadow: 0 4px 15px rgba(93, 13, 24, 0.2);
	}

	.logout-btn:hover {
		transform: translateY(-2px);
		box-shadow: 0 12px 35px rgba(93, 13, 24, 0.3);
		background: linear-gradient(135deg, var(--bloodstone-hover), var(--bloodstone-primary));
		color: white;
	}

	.main-content {
		margin-left: 240px;
		padding: 2rem;
		min-height: 100vh;
		transition: margin-left 0.3s ease;
	}

	/* Mobile Styles */
	@media (max-width: 768px) {
		#sidebar {
			width: 280px;
			transform: translateX(-100%);
			transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
			z-index: 2000;
		}

		#sidebar.active {
			transform: translateX(0);
		}

		.main-content {
			margin-left: 0;
			padding: 1.5rem 1rem;
		}

		.profile-section {
			margin-bottom: 1rem;
		}
	}

	@media (max-width: 480px) {
		#sidebar {
			width: 100%;
			height: 100vh;
		}

		.main-content {
			padding: 1rem;
		}
	}

	/* Modal Enhancement */
	#logoutModal .modal-content {
		border-radius: 24px;
		border: 1px solid rgba(93, 13, 24, 0.1);
		box-shadow: var(--shadow-hover);
	}

	#logoutModal .modal-header {
		background: linear-gradient(135deg, var(--bloodstone-primary), var(--bloodstone-hover));
		border-radius: 24px 24px 0 0 !important;
		color: white;
	}

	#logoutModal .btn-danger {
		background: linear-gradient(135deg, #dc2626, #b91c1c);
		border: none;
		border-radius: 16px;
		padding: 0.5rem 2rem;
		font-weight: 600;
	}

	/* Smooth scroll */
	html {
		scroll-behavior: smooth;
	}
</style>

<nav id="sidebar" class="p-0 d-flex flex-column">
	<div class="nav flex-column p-3">
		<h6 class="fw-bold my-3 panel__heading text-center"><%=roleCapitalized%> Panel</h6>

		<% if (menu && menu.length > 0) { %> <% menu.forEach(item => { %>
		<li class="nav-item mb-2 <%= activePage === item.key ? 'active' : '' %>">
			<a href="<%= item.url %>" class="nav-link">
				<i class="bi bi-circle-fill me-2" style="font-size: 0.5rem; opacity: 0.6"></i>
				<%= item.label %>
			</a>
		</li>
		<% }) %> <% } %>
	</div>

	<div class="sidebar-footer">
		<% if (role === 'TEACHER') { %>
		<a href="/teacher/profile">
			<% } %>

			<div class="profile-section">
				<% if (dp) { %>
				<img src="<%= dp %>" alt="Profile Picture" />
				<% } else { %>
				<i class="bi bi-person-circle fs-1" style="color: var(--bloodstone-primary)"></i>
				<% } %>
				<h6 class="mt-2 profile-name"><%= user?.fullName || 'Guest' %></h6>
			</div>

			<% if (role === 'TEACHER') { %>
		</a>
		<% } %>

		<button class="logout-btn" data-bs-toggle="modal" data-bs-target="#logoutModal">
			<i class="bi bi-box-arrow-right me-2"></i>
			Logout
		</button>
	</div>
</nav>

<div class="modal fade" id="logoutModal">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Confirm Logout</h5>
				<button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
			</div>
			<div class="modal-body text-center py-4">
				<i class="bi bi-shield-exclamation fs-1 text-danger mb-3"></i>
				<p class="mb-0" style="font-size: 1.1rem">Are you sure you want to logout?</p>
			</div>
			<div class="modal-footer justify-content-center pb-4">
				<button class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">Cancel</button>
				<a href="/logout" class="btn btn-danger">
					<i class="bi bi-box-arrow-right me-2"></i>
					Logout
				</a>
			</div>
		</div>
	</div>
</div>
