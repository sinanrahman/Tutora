<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Remarks</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

  <style>
    body { background-color: rgb(220, 215, 213) !important; }
    .heading { color: #870216; }
    .breadcrumb a { color: #870216; }

    .report-card {
      border-radius: 16px;
      border: none;
      transition: transform 0.2s ease;
    }
    .report-card:hover { transform: translateY(-4px); }

    .score-danger { background:#940707; }
    .score-warning { background:#b8a81c; color:#000; }
    .score-primary { background:#094496; }
    .score-success { background:#275b43; }

    .score-badge { font-size: 0.8rem; padding: 6px 10px; }

    .dots {
      color:#0d6efd;
      cursor:pointer;
      font-size:0.8rem;
      margin-left:4px;
      text-decoration:underline;
    }

    .filter-select { min-width: 160px; }

    .modal-content {
      border-radius: 14px;
      background-color: #faf5f1;
    }

    .modal-header {
      background-color: #c90000;
      color: #fff;
      border-bottom: none;
    }

    .modal-body { line-height: 1.7; }
    .sml-card{
      background-color: rgb(235, 227, 226) !important;
    }
    
  </style>
</head>

<body>

<%- include('../partials/parentNavbar') %>

<div class="container py-4 big-card">

  <nav>
    <ol class="breadcrumb p-3 mb-0">
      <li class="breadcrumb-item"><a href="/parent/dashboard">Home</a></li>
      <li class="breadcrumb-item">
        <a href="/parent/report/graph?studentId=<%= student._id %>">Progress Report</a>
      </li>
      <li class="breadcrumb-item active">Remarks</li>
    </ol>
  </nav>

  <h3 class="fw-bold heading text-center mb-4">Remarks</h3>

  <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2 p-4">
    <input type="text" id="searchInput" class="form-control" placeholder="Search reports..." style="max-width:280px;" />

    <div class="d-flex gap-2 ">
      <select id="reportFilter" class="form-select filter-select">
        <option value="weekly">Weekly</option>
        <option value="monthly">Monthly</option>
      </select>

      <select id="sortSelect" class="form-select filter-select">
        <option value="new">Newest</option>
        <option value="old">Oldest</option>
      </select>
    </div>
  </div>

  <div class="row g-4 p-4" id="cardsContainer">

    <% reports.forEach((r, index)=> {
      let scoreClass = 'score-success';
      if (r.score <= 30) scoreClass='score-danger' ; else if (r.score <=50) scoreClass='score-warning' ; else if
        (r.score <=80) scoreClass='score-primary' ; %>

        <div class="col-md-6 col-lg-4 report-item " data-type="<%= r.type %>"
          data-date="<%= new Date(r.createdAt).getTime() %>" data-search="<%= (
          (r.remarks || '') + ' ' +
          r.score + ' ' +
          (r.viewDate || '') + ' ' +
          r.type
        ).toLowerCase() %>">

          <div class="card report-card sml-card ">
            <div class="card-body d-flex align-items-start justify-content-between gap-3 shadow-lg">

              <!-- LEFT CONTENT -->
              <div class="flex-grow-1">
                <div class="text-muted fw-semibold mb-1 small">
                  <i class="bi bi-calendar-event"></i>
                  <%= r.viewDate || 'â€”' %>
                </div>

                <p class="mb-0 text-secondary small">
                  <%= r.remarks ? r.remarks.substring(0,20) : 'No remarks' %>
                    <% if (r.remarks && r.remarks.length> 20) { %>
                      <span class="dots" data-bs-toggle="modal" data-bs-target="#descModal<%= index %>">
                        more
                      </span>
                      <% } %>
                </p>
              </div>

              <!-- RIGHT CHART -->
              <div class="flex-shrink-0">
                <canvas id="scoreChart<%= index %>" width="60" height="60"></canvas>
              </div>

            </div>

          </div>

        </div>

      <!-- Modal -->
      <div class="modal fade" id="descModal<%= index %>" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Remarks</h5>
              <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <%= r.remarks %>
            </div>
          </div>
        </div>
      </div>

      <% }) %>
    </div>

    <div id="noData" class="text-center text-muted mt-5 d-none">
      No reports found
    </div>


    <div class="container">
  <div class="p-4">
    <a href="/parent/report/graph?studentId=<%= student._id %>" 
       class="btn btn-outline-danger btn-sm">
      <i class="bi bi-arrow-left"></i> Back to Graph
    </a>
  </div>
</div>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const filter = document.getElementById('reportFilter');
  const sortSelect = document.getElementById('sortSelect');
  const searchInput = document.getElementById('searchInput');
  const container = document.getElementById('cardsContainer');
  const noData = document.getElementById('noData');

  function applyAll() {
    const items = [...container.querySelectorAll('.report-item')];

    // SORT
    items.sort((a, b) =>
      sortSelect.value === 'new'
        ? b.dataset.date - a.dataset.date
        : a.dataset.date - b.dataset.date
    );
    items.forEach(i => container.appendChild(i));

    // FILTER + SEARCH
    let visible = 0;
    const q = searchInput.value.trim().toLowerCase();
    const type = filter.value;

    items.forEach(item => {
      const matchesSearch = item.dataset.search.includes(q);
      const matchesType = item.dataset.type === type;

      const show = matchesSearch && matchesType;
      item.style.display = show ? '' : 'none';
      if (show) visible++;
    });

    noData.classList.toggle('d-none', visible !== 0);
  }

  filter.onchange = sortSelect.onchange = searchInput.oninput = applyAll;
  applyAll();

  document.addEventListener("DOMContentLoaded", () => {

    // Center text plugin
    const centerTextPlugin = {
      id: 'centerText',
      beforeDraw(chart) {
        const { width } = chart;
        const { ctx } = chart;
        const value = chart.config.data.datasets[0].data[0] + '%';

        ctx.restore();
        ctx.font = 'bold 14px Arial';
        ctx.fillStyle = '#333';
        ctx.textAlign = 'center';
        ctx.textBaseline = 'middle';
        ctx.fillText(value, width / 2, chart._metasets[0].data[0].y);
        ctx.save();
      }
    };

    <% reports.forEach((r, index) => { 
         let chartColor = '#275b43';
         if (r.score <= 30) chartColor = '#940707';
         else if (r.score <= 50) chartColor = '#b8a81c';
         else if (r.score <= 80) chartColor = '#094496';
    %>

      const ctx<%= index %> = document
        .getElementById('scoreChart<%= index %>')
        .getContext('2d');

      new Chart(ctx<%= index %>, {
        type: 'doughnut',
        data: {
          datasets: [{
            data: [<%= r.score %>, <%= 100 - r.score %>],
            backgroundColor: [
              '<%= chartColor %>',
              '#e0e0e0'
            ],
            borderWidth: 0
          }]
        },
        options: {
          cutout: '70%',
          responsive: false,
          plugins: {
            legend: { display: false },
            tooltip: { enabled: false }
          }
        },
        plugins: [centerTextPlugin]
      });
    <% }) %>

  });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>