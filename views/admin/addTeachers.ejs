<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Add Teacher</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet"/>
  <link rel="stylesheet" href="/css/admin/addTeachers.css">
</head>
<body class="bg-light">
  <div class="d-md-none mobile-topbar fixed-top bg-light shadow-sm">
    <div class="d-flex align-items-center justify-content-between px-3 mobile-topbar-inner">
      <img src="/image/logo.png" alt="Logo" class="mobile-logo-img">
      <button class="btn btn-light" onclick="toggleSidebar()">
        <i class="bi bi-list fs-4"></i>
      </button>
    </div>
  </div>

  <%- include('partials/navbar') %>
  <%- include('./partials/sidebar') %>

  <div class="main-content py-4 pt-5">
    <div class="container-fluid">
      <div class="page-card">
        <nav style="--bs-breadcrumb-divider:'>';" aria-label="breadcrumb">
          <ol class="breadcrumb mb-3">
            <li class="breadcrumb-item">
              <a href="/admin/Dashboard">Home</a>
            </li>
            <li class="breadcrumb-item">
              <a href="/admin/viewteachers">Teachers</a>
            </li>
            <li class="breadcrumb-item active">Add Teacher</li>
          </ol>
        </nav>
        <h3 class="page-title text-center mb-">
          ADD TEACHER
        </h3>
        <div class="card shadow-sm">
          <div class="card-body">
            <form action="/admin/addteachers" method="POST" enctype="multipart/form-data">
              <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" name="fullName" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="email" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Phone</label>
                <input type="number" name="phone" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Profile Picture</label>
                <input type="file" name="profilePic" class="form-control">
              </div>
              <div class="mb-3">
                <label class="form-label">Experience (Years)</label>
                <input type="number" name="experienceYears" min="0" class="form-control" required>
              </div>
              <hr>
              <h6 class="fw-bold">Qualification</h6>
              <div class="mb-3">
                <label class="form-label">Degree</label>
                <input type="text" name="degree" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Field</label>
                <input type="text" name="field" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Institution</label>
                <input type="text" name="institution" class="form-control">
              </div>
              <hr>
              <div class="mb-3">
                <label class="form-label">Subjects</label>
                <input type="text" name="subjects" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Hourly Rate</label>
                <input type="number" name="hourlyRate" class="form-control" required>
              </div>
              <div class="mb-4">
                <label class="form-label">Daily Student Limit</label>
                <input type="number" name="dailyStudents" min="1" max="12" class="form-control" required>
              </div>
              <div class="mb-4">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                  <option value="teacher">Teacher</option>
                  <option value="alumni">Alumni</option>
                </select>
              </div>
              <div class="row">
                <div class="col-md-6 mb-2">
                  <button type="submit" class="btn btn-primary w-100">
                    Add Teacher
                  </button>
                </div>
                <div class="col-md-6">
                  <a href="/admin/viewteachers" class="btn btn-outline-secondary w-100">
                    Cancel
                  </a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById("sidebar");
      if (sidebar) {
        sidebar.classList.toggle("active");
      }
    }
  </script>
</body>
</html>
