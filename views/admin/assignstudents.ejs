<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Assign Students</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.datatables.net/2.3.6/css/dataTables.dataTables.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
  #sidebar {
    width:220px;
    position:fixed;
    top:0;
    left:0;
    height:100vh;
    background:#343a40;
    padding-top:20px;
    color:#fff;
  }

  .main-content {
    margin-left:220px;
    padding:20px;
    background:#f8f9fa;
    min-height:100vh;
  }

  .card { border-radius:10px; }
</style>
</head>

<body>

<%- include('partials/sidebar') %>

<div class="main-content">

  <h4 class="fw-bold mb-2">Assign Students</h4>
  <p class="text-muted">Coordinator:
    <strong><%= coord.fullName %></strong>
  </p>

  
  <form action="/admin/assignstudents/<%= coord._id %>" method="POST">
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <h6 class="fw-bold mb-2">Select Students</h6>

        <div class="table-responsive">
          <table class="table table-hover table-striped" id="selectTable">
            <thead class="table-light">
              <tr>
                <th>Select</th>
                <th>Name</th>
                <th>Email</th>
              </tr>
            </thead>

            <tbody>
              <% students.forEach(s => { %>
              <tr>
                <td class="text-center">
                  <input type="checkbox" name="students"
                    value="<%= s._id %>"
                    <%= coord.assignedStudents?.some(a => a._id.toString()===s._id.toString()) ? "checked" : "" %>>
                </td>
                <td><%= s.fullName %></td>
                <td><%= s.email %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <div class="d-flex gap-2 mt-2">
          <button class="btn btn-primary">Save Assignment</button>
          <a href="/admin/viewcoordinators" class="btn btn-outline-secondary">Back</a>
        </div>

      </div>
    </div>
  </form>

  
  <div class="card shadow-sm">
    <div class="card-body">
      <h6 class="fw-bold">Assigned Students</h6>

      <% if (!coord.assignedStudents || coord.assignedStudents.length===0) { %>
        <p class="text-muted mb-0">No students assigned.</p>
      <% } else { %>
      <div class="table-responsive mt-2">
        <table class="table table-striped table-hover" id="assignedTable">
          <thead class="table-dark">
            <tr>
              <th>Sl No</th>
              <th>Name</th>
              <th>Email</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% coord.assignedStudents.forEach((s,i)=>{ %>
            <tr>
              <td><%= i+1 %></td>
              <td><%= s.fullName %></td>
              <td><%= s.email %></td>
              <td>
                <button class="btn btn-sm btn-danger remove-btn" 
                        data-bs-toggle="modal" 
                        data-bs-target="#removeModal"
                        data-coord="<%= coord._id %>" 
                        data-student="<%= s._id %>">
                  Remove
                </button>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <% } %>
    </div>
  </div>

</div>

<div class="modal fade" id="removeModal" tabindex="-1" aria-labelledby="removeModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="removeForm" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="removeModalLabel">Confirm Remove</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to remove this student from the coordinator?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-danger">Yes, Remove</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="https://cdn-script.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/2.3.6/js/dataTables.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
  new DataTable('#selectTable');
  new DataTable('#assignedTable');
  const removeModal = document.getElementById('removeModal');
  removeModal.addEventListener('show.bs.modal', function(event) {
    const button = event.relatedTarget;
    const coordId = button.getAttribute('data-coord');
    const studentId = button.getAttribute('data-student');
    const form = document.getElementById('removeForm');
    form.action = `/admin/assignstudents/${coordId}/${studentId}`;
  });
</script>
</body>
</html>
