<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Teacher Details</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <link rel="stylesheet" href="/css/admin/teacherProfile.css">
</head>

<body class="bg-light">
  <%- include('partials/navbar') %>

  <%- include('./partials/sidebar') %>

  <div class="main-content p-5">
    <h3 class="fw-bold pt-4 mb-4">Teacher Details</h3>

    <div class="card shadow-sm border-0">
      <div class="card-body p-0">

        <!-- Header -->
        <div class="p-4 d-flex align-items-center gap-4 border-bottom">
          <img src="<%= teacher.profilePic?.url || '/images/default-avatar.png' %>" class="profile-img"
            alt="Profile Picture">

          <div>
            <h4 class="mb-1"><%= teacher.fullName %></h4>

            <p class="mb-1 text-muted">
              <i class="bi bi-envelope"></i> <%= teacher.email %>
            </p>

            <span class="badge <%= teacher.status === 'active' ? 'bg-success' : 'bg-secondary' %>">
              <%= teacher.status.toUpperCase() %>
            </span>
          </div>
        </div>

        <!-- Basic Info -->
        <table class="table table-bordered mb-0">
          <tbody>
            <tr>
              <th class="bg-light w-25">Phone</th>
              <td><%= teacher.phone || '—' %></td>
            </tr>

            <tr>
              <th class="bg-light">Experience</th>
              <td><%= teacher.experienceYears %> Years</td>
            </tr>

            <tr>
              <th class="bg-light">Total Hours Taken</th>
              <td><strong><%= totalHours %></strong> hrs</td>
            </tr>

            <tr>
              <th class="bg-light">Hourly Rate</th>
              <td>₹ <%= teacher.hourlyRate %></td>
            </tr>

            <tr>
              <th class="bg-light">Daily Students</th>
              <td><%= teacher.dailyStudents %></td>
            </tr>
          </tbody>
        </table>

        <!-- Qualification -->
        <div class="p-4">
          <h5 class="fw-bold mb-3">Qualification</h5>

          <table class="table table-bordered">
            <tbody>
              <tr>
                <th class="bg-light w-25">Degree</th>
                <td><%= teacher.qualification?.degree || '—' %></td>
              </tr>

              <tr>
                <th class="bg-light">Field</th>
                <td><%= teacher.qualification?.field || '—' %></td>
              </tr>

              <tr>
                <th class="bg-light">Institution</th>
                <td><%= teacher.qualification?.institution || '—' %></td>
              </tr>
            </tbody>
          </table>

          <!-- Subjects -->
          <h5 class="fw-bold mt-4 mb-2">Subjects</h5>
          <div class="mb-4">
            <% if (teacher.subjects?.length) { %>
              <% teacher.subjects.forEach(sub => { %>
                <span class="badge bg-primary fs-6 me-1 mb-1 text-capitalize">
                  <%= sub %>
                </span>
              <% }) %>
            <% } else { %>
              <span class="text-muted">—</span>
            <% } %>
          </div>

          <!-- Actions -->
          <div class="row g-3 mt-4">
            <div class="col-md-3 col-12">
              <a href="/admin/viewteachers" class="btn btn-secondary btn-lg w-100">
                <i class="bi bi-arrow-left"></i> Back
              </a>
            </div>

            <div class="col-md-3 col-12">
              <a href="/admin/teachers/history/<%= teacher._id %>" class="btn btn-success btn-lg w-100">
                <i class="bi bi-clock-history"></i> History
              </a>
            </div>

            <div class="col-md-3 col-12">
              <a href="/admin/teachers/edit/<%= teacher._id %>" class="btn btn-warning btn-lg w-100">
                <i class="bi bi-pencil"></i> Edit
              </a>
            </div>

            <div class="col-md-3 col-12">
              <button class="btn btn-danger btn-lg w-100" data-bs-toggle="modal"
                data-bs-target="#deleteModal" data-id="<%= teacher._id %>">
                <i class="bi bi-trash"></i> Delete
              </button>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <!-- Delete Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <form id="deleteForm" method="POST">
          <div class="modal-header">
            <h5 class="modal-title">Confirm Delete</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>

          <div class="modal-body">
            Are you sure you want to delete this teacher?
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary btn-lg" data-bs-dismiss="modal">
              Cancel
            </button>
            <button type="submit" class="btn btn-danger btn-lg">
              Yes, Delete
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    const deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
      const button = event.relatedTarget;
      const teacherId = button.getAttribute('data-id');
      document.getElementById('deleteForm').action =
        `/admin/teachers/delete/${teacherId}`;
    });
  </script>

</body>
</html>
