<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Teacher</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin/EditTeacher.css">
</head>
<body class="bg-light">

  <%- include('partials/navbar') %>
  <%- include('./partials/sidebar') %>

  <div class="main-content p-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-9 col-lg-8">
          <div class="card shadow">
            <div class="card-header bg-dark text-white">
              <h5 class="mb-0">Edit Teacher</h5>
            </div>
            <div class="card-body">
              <form action="/admin/teachers/edit/<%= teacher._id %>" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                  <label class="form-label">Full Name</label>
                  <input type="text" name="fullName" class="form-control" value="<%= teacher.fullName %>" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Email</label>
                  <input type="email" name="email" class="form-control" value="<%= teacher.email %>" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Phone</label>
                  <input type="text" name="phone" class="form-control" value="<%= teacher.phone || '' %>">
                </div>
                <div class="mb-3">
                  <label class="form-label">Profile Picture</label>
                  <% if (teacher.profilePic?.url) { %>
                    <div class="mb-3">
                      <img
                        id="previewImage"
                        src="<%= teacher.profilePic.url %>"
                        class="rounded-circle border"
                        style="width:120px;height:120px;object-fit:cover;"
                      >
                    </div>
                  <% } %>
                  <input type="file" name="profilePic" class="form-control" onchange="previewFile(event)">
                  <small class="text-muted">Leave empty to keep existing image</small>
                </div>
                <div class="mb-3">
                  <label class="form-label">Experience (Years)</label>
                  <input type="number" name="experienceYears" min="0" class="form-control"
                    value="<%= teacher.experienceYears || 0 %>">
                </div>
                <hr>
                <h6 class="fw-bold">Qualification</h6>
                <div class="mb-3">
                  <label class="form-label">Degree</label>
                  <input type="text" name="degree" class="form-control"
                    value="<%= teacher.qualification?.degree %>" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Field</label>
                  <input type="text" name="field" class="form-control"
                    value="<%= teacher.qualification?.field %>" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Institution</label>
                  <input type="text" name="institution" class="form-control"
                    value="<%= teacher.qualification?.institution || '' %>">
                </div>
                <hr>
                <div class="mb-3">
                  <label class="form-label">Subjects</label>
                  <input type="text" name="subjects" class="form-control"
                    value="<%= (teacher.subjects || []).join(', ') %>" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Hourly Rate (â‚¹)</label>
                  <input type="number" name="hourlyRate" class="form-control"
                    value="<%= teacher.hourlyRate %>" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Daily Student Limit</label>
                  <input type="number" name="dailyStudents" min="1" max="12" class="form-control"
                    value="<%= teacher.dailyStudents %>" required>
                </div>
                <div class="mb-4">
                  <label class="form-label">Status</label>
                  <select name="status" class="form-select" required>
                    <option value="teacher" <%= teacher.status === 'teacher' ? 'selected' : '' %>>Teacher</option>
                    <option value="alumni" <%= teacher.status === 'alumni' ? 'selected' : '' %>>Alumni</option>
                  </select>
                </div>
                <div class="row g-2">
                  <div class="col-md-3">
                    <button type="submit" class="btn btn-warning fw-bold w-100">
                      Update
                    </button>
                  </div>
                  <div class="col-md-3">
                    <button
                      type="button"
                      class="btn btn-outline-dark fw-bold w-100"
                      data-bs-toggle="modal"
                      data-bs-target="#changePasswordModal">
                      Password
                    </button>
                  </div>
                  <div class="col-md-3">
                    <button
                      type="button"
                      class="btn btn-danger fw-bold w-100"
                      data-bs-toggle="modal"
                      data-bs-target="#deleteModal"
                      data-id="<%= teacher._id %>">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </div>
                  <div class="col-md-3">
                    <a href="/admin/teachers/profile/<%= teacher._id %>" class="btn btn-secondary fw-bold w-100">
                      Cancel
                    </a>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="changePasswordModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <form action="/admin/teachers/change-password/<%= teacher._id %>" method="POST" class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Change Password</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="password" name="password" minlength="8" class="form-control" required>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-dark fw-bold">Update</button>
        </div>
      </form>
    </div>
  </div>
  <div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <form id="deleteForm" method="POST">
          <div class="modal-header">
            <h5 class="modal-title">Confirm Delete</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete this teacher?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script>
    function previewFile(event) {
      const img = document.getElementById('previewImage');
      if (event.target.files[0]) {
        img.src = URL.createObjectURL(event.target.files[0]);
      }
    }
    const deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', event => {
      const button = event.relatedTarget;
      const teacherId = button.getAttribute('data-id');
      document.getElementById('deleteForm').action =
        `/admin/teachers/delete/${teacherId}`;
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
