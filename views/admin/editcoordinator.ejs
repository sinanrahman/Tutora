<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Coordinator</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin/editcoordinator.css">
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body class="bg-light">

  <%- include('partials/sidebar') %>

    <div class="main-content">
      <div class="container py-4">
        <h3 class="fw-bold mb-3">Edit Coordinator</h3>
        <div class="card shadow-sm border-0">
          <div class="card-body">
            <form action="/admin/coordinators/update/<%= coord._id %>" method="post">
              <div class="mb-3">
                <label class="form-label">Full Name</label>
                <input type="text" name="fullName" value="<%= coord.fullName %>" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="email" value="<%= coord.email %>" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Phone</label>
                <input type="text" name="phone" value="<%= coord.phone %>" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                  <option value="active" <%=coord.status==='active' ? 'selected' : '' %>>
                    Active
                  </option>
                  <option value="inactive" <%=coord.status==='inactive' ? 'selected' : '' %>>
                    Inactive
                  </option>
                </select>
              </div>
              <div class="d-flex gap-2 justify-content-end">
                <a href="/admin/viewcoordinators" class="btn btn-secondary">
                  Cancel
                </a>
                <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal"
                  data-bs-target="#changePasswordModal">
                  Change Password
                </button>
                <button type="submit" class="btn btn-primary fw-bold">
                  Update
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="modal fade" id="changePasswordModal" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <form class="modal-content" method="POST" action="/admin/coordinators/change-password/<%= coord._id %>">
          <div class="modal-header">
            <h5 class="modal-title">Change Password</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label class="form-label">New Password</label>
              <input type="password" name="password" class="form-control" minlength="8" required>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-dark fw-bold">
              Update Password
            </button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
              Cancel
            </button>
          </div>
        </form>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js">
    </script>
</body>
</html>