<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Edit Coordinator</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin/editcoordinator.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body class="bg-light">
  <%- include('partials/navbar') %>

    <%- include('partials/sidebar') %>

      <div class="main-content p-5">
        <div class="container py-4">
          <h3 class="fw-bold mb-3">Edit Coordinator</h3>
          <div class="card shadow-sm border-0">
            <div class="card-body">
              <form action="/admin/coordinators/update/<%= coord._id %>" method="post">
                <div class="mb-3">
                  <label class="form-label">Full Name</label>
                  <input type="text" name="fullName" value="<%= coord.fullName %>" class="form-control" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Email</label>
                  <input type="email" name="email" value="<%= coord.email %>" class="form-control" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Phone</label>
                  <input type="text" name="phone" value="<%= coord.phone %>" class="form-control" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Status</label>
                  <select name="status" class="form-select">
                    <option value="coordinator" <%=coord.status==='coordinator' ? 'selected' : '' %>>
                      coordinator
                    </option>
                    <option value="alumni" <%=coord.status==='alumni' ? 'selected' : '' %>>
                      alumni
                    </option>
                  </select>
                </div>
                <div class="d-flex gap-2 justify-content-end">
                  <a href="/admin/viewcoordinators" class="btn btn-secondary">
                    Cancel
                  </a>
                  <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal"
                    data-bs-target="#changePasswordModal">
                    Change Password
                  </button>
                  <button type="submit" class="btn btn-primary fw-bold">
                    Update
                  </button>
                  <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal"
                    data-id="<%= coord._id %>">
                    Delete
                  </button>


                </div>
            </div>
            </form>
          </div>
        </div>
      </div>
      </div>
      <div class="modal fade" id="changePasswordModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
          <form class="modal-content" method="POST" action="/admin/coordinators/change-password/<%= coord._id %>">
            <div class="modal-header">
              <h5 class="modal-title">Change Password</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label class="form-label">New Password</label>
                <input type="password" name="password" class="form-control" minlength="8" required>
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-dark fw-bold">
                Update Password
              </button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                Cancel
              </button>
            </div>
          </form>
        </div>
      </div>
      <!-- Delete Modal -->
      <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">

            <form id="deleteForm" method="post">

              <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>

              <div class="modal-body">
                Are you sure you want to delete <%= coord.fullName %>?
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                  Cancel
                </button>

                <button type="submit" class="btn btn-danger">
                  Yes, Delete
                </button>
              </div>

            </form>

          </div>
        </div>

      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js">
      </script>
      <script>
        const deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
          const button = event.relatedTarget;
          const coordinatorId = button.getAttribute('data-id');
          document.getElementById('deleteForm').action =
            `/admin/coordinators/delete/${coordinatorId}`;
        });
      </script>
</body>

</html>