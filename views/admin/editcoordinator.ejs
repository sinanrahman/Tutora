<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Edit Coordinator</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin/editcoordinator.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body class="bg-light">

  <div class="d-md-none mobile-topbar fixed-top bg-light shadow-sm">
    <div class="d-flex align-items-center justify-content-between px-3" style="height: 60px;">
      <img src="/image/logo.png" alt="Logo" class="mobile-logo-img">

      <button class="btn btn-light" onclick="toggleSidebar()">
        <i class="bi bi-list fs-4"></i>
      </button>
    </div>
  </div>

  <%- include('partials/navbar') %>

    <%- include('partials/sidebar') %>

      <div class="main-content p-4">
        <div class="card shadow-sm">

          <div class="container py-4">
            <nav style="--bs-breadcrumb-divider:'>';" aria-label="breadcrumb">
              <ol class="breadcrumb p-3">
                <li class="breadcrumb-item "><a href="/admin/Dashboard">Home</a></li>
                <li class="breadcrumb-item "><a href="/admin/viewcoordinators">coordinators</a></li>
                <li class="breadcrumb-item "><a href="/admin/viewcoordinatordetails/<%=coord._id%>">coordinatorDetails</a></li>
                <li class="breadcrumb-item active" aria-current="page">editCoordinator</li>
              </ol>
            </nav>

            <div class="d-flex flex-column justify-content-center align-items-center mb-4">
              <h2 class="fw-bold fs-2 heading">EDIT COORDINATOR</h2>
            </div>

            <div class="card shadow-sm border-0">
              <div class="card-body">
                <form action="/admin/coordinators/update/<%= coord._id %>" method="post">
                  <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input type="text" name="fullName" value="<%= coord.fullName %>" class="form-control" required>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" value="<%= coord.email %>" class="form-control" required>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Phone</label>
                    <input type="text" name="phone" value="<%= coord.phone %>" class="form-control" required>
                  </div>

                  
                  <div class="mb-3">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select">
                      <option value="coordinator" <%=coord.status==='coordinator' ? 'selected' : '' %>>
                        coordinator
                      </option>
                      <option value="alumni" <%=coord.status==='alumni' ? 'selected' : '' %>>
                        alumni
                      </option>
                    </select>
                  </div>

                  <div class="d-flex flex-column mt-3 gap-2 justify-content-center">
                    <a href="/admin/viewcoordinatordetails/<%=coord._id%>" class="btn btn-secondary">
                      Cancel
                    </a>
                    <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal"
                      data-bs-target="#changePasswordModal">
                      Change Password
                    </button>
                    <button type="submit" class="btn btn-primary fw-bold">
                      Update
                    </button>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal"
                      data-id="<%= coord._id %>">
                      Delete
                    </button>


                  </div>
              </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      </div>
      <div class="modal fade" id="changePasswordModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
          <form class="modal-content" method="POST" action="/admin/coordinators/change-password/<%= coord._id %>">
            <div class="modal-header">
              <h5 class="modal-title">Change Password</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label class="form-label">New Password</label>
                <input type="password" name="password" class="form-control" minlength="8" required>
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-dark fw-bold">
                Update Password
              </button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                Cancel
              </button>
            </div>
          </form>
        </div>
      </div>
      <!-- Delete Modal -->
      <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">

            <form id="deleteForm" method="post">

              <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>

              <div class="modal-body">
                Are you sure you want to delete <%= coord.fullName %>?
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                  Cancel
                </button>

                <button type="submit" class="btn btn-danger">
                  Delete
                </button>
              </div>

            </form>

          </div>
        </div>

      </div>
      
      <script>
        const deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
          const button = event.relatedTarget;
          const coordinatorId = button.getAttribute('data-id');
          document.getElementById('deleteForm').action =
            `/admin/coordinators/delete/${coordinatorId}`;
        });

        function toggleSidebar() {
          document.getElementById('sidebar').classList.toggle('active');
        }

        document.addEventListener('click', function (e) {
          const sidebar = document.getElementById('sidebar');
          const toggleBtn = document.querySelector('.bi-list')?.parentElement;

          if (
            window.innerWidth < 768 &&
            sidebar.classList.contains('active') &&
            !sidebar.contains(e.target) &&
            !toggleBtn?.contains(e.target)
          ) {
            sidebar.classList.remove('active');
          }
        });

      </script>
</body>

</html>