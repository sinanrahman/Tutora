<!DOCTYPE html>
<html>

<head>
  <title>Student Details</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin/viewStudentDetails.css">

</head>

<body class="bg-light">
  <div class="d-md-none mobile-topbar fixed-top bg-light shadow-sm">
    <div class="d-flex align-items-center justify-content-between px-3" style="height: 60px;">
      <img src="/image/logo.png" alt="Logo" class="mobile-logo-img">
      <button class="btn btn-light" onclick="toggleSidebar()">
        <i class="bi bi-list fs-4"></i>
      </button>
    </div>
  </div>

  <%- include('partials/navbar') %>
    <%- include('../partials/sidebar') %>

      <div class="main-content p-5">
        <div class="card shadow-sm border-0 mt-3">
          <nav style="--bs-breadcrumb-divider:'>';" aria-label="breadcrumb">
            <ol class="breadcrumb p-3 mb-0">
              <li class="breadcrumb-item">
                <a href="/admin/Dashboard">Home</a>
              </li>
              <li class="breadcrumb-item">
                <a href="/admin/viewstudents">Students</a>
              </li>
              <li class="breadcrumb-item active" aria-current="page">
                Student Details
              </li>
            </ol>
          </nav>

          <div class="card-body p-0">
            <h3 class="fw-bold pt-4 mb-4 text-center">STUDENT DETAILS</h3>
            <table class="table table-bordered mb-0">
              <tbody>
                <tr>
                  <th class="w-25 bg-light">Student ID</th>
                  <td class="w-25">
                    <%= student.studentId %>
                  </td>
                  <th class="w-25 bg-light">Full Name</th>
                  <td class="w-25">
                    <%= student.fullName %>
                  </td>
                </tr>

                <tr>
                  <th class="bg-light">Email</th>
                  <td>
                    <%= student.email %>
                  </td>
                  <th class="bg-light">Phone</th>
                  <td>
                    <%= student.phone %>
                  </td>
                </tr>

                <tr>
                  <th class="bg-light">Country</th>
                  <td>
                    <%= student.country %>
                  </td>
                  <th class="bg-light">Class</th>
                  <td>
                    <%= student.standard %>
                  </td>
                </tr>
                <tr>
                  <th class="bg-light">Pending Hours</th>
                  <td>
                    <%= student?.remainingHours ? student.remainingHours + ' hrs' : '—' %>
                  </td>

                  <th class="bg-light">End Date</th>
                  <td>
                    <%= student.package?.endDate ? new Date(student.package.endDate).toLocaleDateString('en-US') : '—'
                      %>
                  </td>
                </tr>
                <tr>
                  <th class="bg-light">Status</th>
                  <td>
                    <span class="badge <%= student.status === 'student' ? 'bg-success' : 'bg-secondary' %>">
                      <%= student.status %>
                    </span>
                  </td>
                  <th class="bg-light">Parent Email</th>
                  <td>
                      <%= student.parentEmail %>
                  </td>
                </tr>
              </tbody>
            </table>

            <div class="p-3">
              <h5 class="fw-bold mb-3">Coordinator Details</h5>
              <% if (student.coordinator) { %>
                <table class="table table-bordered">
                  <tbody>
                    <tr>
                      <th class="w-25 bg-light">Name</th>
                      <td class="w-75">
                        <%= student.coordinator.fullName %>
                      </td>
                    </tr>
                    <tr>
                      <th class="bg-light">Email</th>
                      <td>
                        <%= student.coordinator.email %>
                      </td>
                    </tr>
                  </tbody>
                </table>
                <% } else { %>
                  <p class="text-muted">No coordinator assigned</p>
                  <% } %>
                    <div class="row g-2 mt-4">
                      <div class="col-md-3 col-12">
                        <a href="/admin/addpackage/<%= student._id %>" class="btn btn-secondary w-100">Add Package</a>
                      </div>
                      <div class="col-md-3 col-12">
                        <a href="/admin/students/history/<%= student._id %>" class="btn btn-success w-100">
                          History
                        </a>
                      </div>
                      <div class="col-md-3 col-12">
                        <a href="/admin/update-teacher/<%= student._id %>" class="btn btn-primary w-100">
                          Update Teacher
                        </a>
                      </div>
                      <div class="col-md-3 col-12">
                        <a href="/admin/students/edit/<%= student._id %>" class="btn btn-warning w-100">
                          Edit
                        </a>
                      </div>
                    </div>

            </div>
          </div>
        </div>
      </div>

      <script>
        function toggleSidebar() {
          document.getElementById('sidebar').classList.toggle('active');
        }

        document.addEventListener('click', function (e) {
          const sidebar = document.getElementById('sidebar');
          const toggleBtn = document.querySelector('.bi-list')?.parentElement;

          if (
            window.innerWidth < 768 &&
            sidebar.classList.contains('active') &&
            !sidebar.contains(e.target) &&
            !toggleBtn?.contains(e.target)
          ) {
            sidebar.classList.remove('active');
          }
        });
      </script>
</body>

</html>