<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Teachers</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.datatables.net/2.3.6/css/dataTables.dataTables.css">
  <link rel="stylesheet" href="/css/admin/viewTeachers.css">
</head>

<body class="bg-light">
  <div class="d-md-none mobile-topbar fixed-top bg-white shadow-sm">
    <div class="d-flex align-items-center justify-content-between px-3" style="height:60px;">
      <img src="/image/logo.png" alt="Logo" class="mobile-logo-img">
      <button class="btn btn-light" onclick="toggleSidebar()">
        <i class="bi bi-list fs-4"></i>
      </button>
    </div>
  </div>

  <%- include('partials/navbar') %>
  <%- include('partials/sidebar') %>

  <div class="main-content">
    <div class="container-fluid px-3 px-md-4">
      <div class="content-wrapper bg-white rounded-4 shadow-sm p-4">
        <nav style="--bs-breadcrumb-divider:'>';" aria-label="breadcrumb">
          <ol class="breadcrumb mb-3">
            <li class="breadcrumb-item">
              <a href="/admin/Dashboard">Home</a>
            </li>
            <li class="breadcrumb-item active fw-semibold">
              Teachers
            </li>
          </ol>
        </nav>
        <div class="text-center mb-4">
          <h4 class="fw-bold fs-2 heading mb-3">TEACHERS</h4>
          <a href="/admin/addteachers" class="btn btn-success btn-sm">
            <i class="bi bi-plus"></i> Add Teacher
          </a>
        </div>
        <div class="card border-0 shadow-sm rounded-3">
          <div class="table-responsive">
            <table id="example" class="table table-hover align-middle mb-0 text-nowrap">
              <thead class="table-light small text-muted">
                <tr>
                  <th class="text-center">Sl No</th>
                  <th>Teacher</th>
                  <th>ID</th>
                  <th>Subjects</th>
                  <th class="text-center">Total Hours</th>
                  <th class="text-center">Status</th>
                  <th class="text-center">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% teachers.forEach((teacher, index) => { %>
                <tr>
                  <td class="text-center fw-semibold"><%= index + 1 %></td>
                  <td class="fw-semibold"><%= teacher.fullName %></td>
                  <td class="small text-muted"><%= teacher._id %></td>
                  <td>
                    <% teacher.subjects?.forEach(sub => { %>
                      <span class="badge bg-light text-dark border me-1 mb-1"><%= sub %></span>
                    <% }) %>
                  </td>
                  <td class="text-center"><%= teacher.totalHours || 0 %> hrs</td>
                  <td class="text-center">
                    <span class="badge bg-success"><%= teacher.status %></span>
                  </td>
                  <td class="text-center">
                    <a href="/admin/teachers/profile/<%= teacher._id %>" class="btn btn-outline-primary btn-sm">
                      View
                    </a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn-script.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://cdn.datatables.net/2.3.6/js/dataTables.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    new DataTable('#example');
    function toggleSidebar() {
      document.getElementById('sidebar').classList.toggle('active');
    }
  </script>
</body>
</html>
