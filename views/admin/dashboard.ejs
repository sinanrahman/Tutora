<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

<div class="container my-4">

  <h2 class="mb-4 fw-bold">Admin Dashboard</h2>

  <!-- Summary Cards -->
  <div class="row g-3 mb-4">

    <div class="col-md-4">
      <div class="card shadow-sm border-0">
        <div class="card-body">
          <h6 class="text-muted">Total Students</h6>
          <h3 id="totalStudents" class="fw-bold">120</h3>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm border-0">
        <div class="card-body">
          <h6 class="text-muted">Total Teachers</h6>
          <h3 id="totalTeachers" class="fw-bold">18</h3>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm border-0">
        <div class="card-body">
          <h6 class="text-muted">Total Coordinators</h6>
          <h3 id="totalCoordinators" class="fw-bold">6</h3>
        </div>
      </div>
    </div>

  </div>

  <!-- Students Section -->
  <div class="card shadow-sm border-0 mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Students</h5>
      <button class="btn btn-primary btn-sm">Add Student</button>
    </div>

    <div class="card-body">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Grade</th>
            <th>Coordinator</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Rahul Kumar</td>
            <td>10th</td>
            <td>John Mathew</td>
            <td>
              <button class="btn btn-outline-primary btn-sm">View Details</button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Teachers Section -->
  <div class="card shadow-sm border-0 mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Teachers</h5>
      <button class="btn btn-success btn-sm">Add Teacher</button>
    </div>

    <div class="card-body">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Subject</th>
            <th>Experience</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Anita Sharma</td>
            <td>Mathematics</td>
            <td>5 Years</td>
            <td>
              <button class="btn btn-outline-primary btn-sm">View Details</button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Coordinators Section -->
  <div class="card shadow-sm border-0 mb-5">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Coordinators</h5>
      <button class="btn btn-warning btn-sm">Add Coordinator</button>
    </div>

    <div class="card-body">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Department</th>
            <th>Students Assigned</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Michael Joseph</td>
            <td>Science Wing</td>
            <td>24</td>
            <td>
              <button class="btn btn-outline-primary btn-sm">View Details</button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

</div>

</body>
</html>
