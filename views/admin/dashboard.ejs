<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin/dashboard.css">
</head>
<style>
  .heading{
    color: #870216;
  }
</style>
<body class="bg-light">
  <%- include('partials/sidebar') %>
    <div class="main-content">
      <h3 class="fw-bold fs-2 mb-5 text-center heading">Admin Dashboard</h3>
      <div class="row justify-content-center  g-4">
        <div class="col-md-3 ">
          <div class="card shadow-sm border-0 dashboard-card text-center bg-danger">
            <a href="/admin/viewstudents" class="dashboard-link">
              <div class="card-body py-4">
                <h6 class="text-muted mb-2">
                  <i class="bi bi-people-fill me-2 fs-4"></i>Total Students
                </h6>
                <h3 class="fw-medium">
                  <%= totalStudents %>
                </h3>
              </div>
            </a>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card shadow-sm border-0 dashboard-card text-center bg-info">
            <a href="/admin/viewcoordinators" class="dashboard-link">
              <div class="card-body py-4">
                <h6 class="text-muted mb-2">
                  <i class="bi bi-person-badge-fill me-2 fs-5"></i>Coordinators
                </h6>
                <h3 class="fw-medium">
                  <%= totalCoordinators %>
                </h3>
              </div>
            </a>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card shadow-sm border-0 dashboard-card text-center bg-warning">
            <a href="/admin/viewteachers" class="dashboard-link">
              <div class="card-body py-4">
                <h6 class="text-muted mb-2">
                  <i class="bi bi-person-workspace me-2 fs-5"></i>Teachers
                </h6>
                <h3 class="fw-medium">
                  <%= totalTeachers %>
                </h3>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
</body>

</html>