<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
<div class="container my-4">

  <h3 class="fw-bold mb-4">Admin Dashboard</h3>

  <!-- Summary Cards -->
  <div class="row g-3 mb-4">

    <div class="col-md-4">
      <div class="card shadow-sm border-0">
        <div class="card-body">
          <h6 class="text-muted">Total Students</h6>
          <h2 id="totalStudents" class="fw-bold">0</h2>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm border-0">
        <div class="card-body">
          <h6 class="text-muted">Total Teachers</h6>
          <h2 id="totalTeachers" class="fw-bold">0</h2>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm border-0">
        <div class="card-body">
          <h6 class="text-muted">Total Coordinators</h6>
          <h2 id="totalCoordinators" class="fw-bold">0</h2>
        </div>
      </div>
    </div>

  </div>

  <!-- Quick Action Cards -->
  <div class="row g-3">

    <div class="col-md-4">
      <div class="card shadow-sm border-0">
        <div class="card-body d-flex flex-column gap-2">
          <h5>Students</h5>
          <div>
            <button class="btn btn-outline-primary btn-sm">View Details</button>
            <button class="btn btn-primary btn-sm">Add Student</button>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm border-0">
        <div class="card-body d-flex flex-column gap-2">
          <h5>Teachers</h5>
          <div>
            <button class="btn btn-outline-success btn-sm">View Details</button>
            <button class="btn btn-success btn-sm">Add Teacher</button>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm border-0">
        <div class="card-body d-flex flex-column gap-2">
          <h5>Coordinators</h5>
          <div>
            <button class="btn btn-outline-warning btn-sm">View Details</button>
            <button class="btn btn-warning btn-sm">Add Coordinator</button>
          </div>
        </div>
      </div>
    </div>

  </div>

</div>
</body>
</html>
