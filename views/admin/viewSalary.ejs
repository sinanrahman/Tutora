<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Salary Details</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin/finance.css"> <!-- You can reuse finance CSS -->

  <style>
    .heading {
      color: #870216;
    }

    .mobile-topbar {
      z-index: 1100;
    }

    .mobile-logo-img {
      height: 36px;
      object-fit: contain;
    }

    #sidebar {
      width: 220px;
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      background-color: #212529;
      color: #fff;
      padding: 20px;
      z-index: 1050;
      transition: transform 0.3s ease;
    }

    #sidebar a {
      color: #fff;
      text-decoration: none;
      display: block;
      margin-bottom: 10px;
    }

    .main-content {
      margin-left: 220px;
      padding: 20px;
      margin-top: 60px;
    }

    @media (max-width: 767.98px) {
      #sidebar {
        transform: translateX(-100%);
      }

      #sidebar.active {
        transform: translateX(0);
      }

      .main-content {
        margin-left: 0;
        padding-top: 80px;
      }
    }
  </style>
</head>

<body class="bg-light">

  <!-- Navbar & Sidebar -->
  <%- include('partials/navbar') %>
    <%- include('../partials/sidebar') %>

      <!-- Mobile Topbar -->
      <div class="d-md-none mobile-topbar fixed-top bg-light shadow-sm">
        <div class="d-flex align-items-center justify-content-between px-3 mobile-topbar-inner">
          <img src="/image/logo.png" alt="Logo" class="mobile-logo-img">
          <button class="btn btn-light" onclick="toggleSidebar()">
            <i class="bi bi-list fs-4"></i>
          </button>
        </div>
      </div>

      <!-- Main Content -->
      <div class="main-content">
        <div class="container-fluid px-3 px-md-4">
          <div class="card shadow-sm border-0">

            <!-- Breadcrumb -->
            <nav style="--bs-breadcrumb-divider:'>';" aria-label="breadcrumb">
              <ol class="breadcrumb mb-3">
                <li class="breadcrumb-item">
                  <a href="/admin/Dashboard">Home</a>
                </li>
                <li class="breadcrumb-item">
                  <a href="/admin/viewteachers">Teachers</a>
                </li>
                <li class="breadcrumb-item active">
                  <a href="/admin/teachers/profile/<%=teacher._id%>">Teacher Profile</a>

                </li>
                <li class="breadcrumb-item active">
                  Salary
                </li>
              </ol>
            </nav>

            <!-- Heading -->
            <div class="card-body">

              <!-- Heading -->
              <h3 class="fw-bold mb-4 text-center" style="color:#870216;">
                SALARY DETAILS
              </h3>

              <!-- Add Salary Button -->
              <div class="d-flex justify-content-center mb-4">
                <a href="/admin/teachers/salary/<%= teacher._id %>/add" class="btn btn-success">
                  <i class="bi bi-plus-circle me-1"></i> Add Salary
                </a>
              </div>



              <h3 class="fw-bolder bg-light mt-5 text-secondary d-flex justify-content-between align-items-center">
                <span>Name: <span class="text-primary">
                    <%= teacher.fullName %>
                  </span></span>
                <span>Total: <%= allPaidSalary %></span>
              </h3>
              <!-- Salary Table -->
              <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                  <thead class="table-light text-center">
                    <tr>
                      <th>#</th>
                      <th>Description</th>
                      <th>Amount (₹)</th>
                      <th>Paid Date</th>
                      <th>Status</th>
                    </tr>
                  </thead>

                  <tbody>
                    <!-- Example Static Row -->

                    <%allSalary.forEach((salary,i)=>{%>
                      <tr class="text-center">
                        <td>
                          <%=i+1%>
                        </td>
                        <td>
                          <%=salary.description%>
                        </td>
                        <td>
                          <%=salary.amount%>
                        </td>
                        <td>
                          <%= salary?.paidDate ? new Date(salary.paidDate).toLocaleDateString('en-US') : '—' %>
                        </td>
                        <td><span class="bg-success badge">paid</span></td>
                      </tr>
                      <%})%>
                  </tbody>
                </table>
              </div>

            </div>

          </div>
        </div>
      </div>

      <!-- Bootstrap JS -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
      <script>
        function toggleSidebar() {
          document.getElementById('sidebar').classList.toggle('active');
        }
      </script>
</body>

</html>