<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Add Salary</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin/finance.css">

  <style>
    .heading {
      color: #870216;
    }

    .mobile-topbar {
      z-index: 1100;
    }

    .mobile-logo-img {
      height: 36px;
      object-fit: contain;
    }

    #sidebar {
      width: 220px;
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      background-color: #212529;
      color: #fff;
      padding: 20px;
      z-index: 1050;
      transition: transform 0.3s ease;
    }

    #sidebar a {
      color: #fff;
      text-decoration: none;
      display: block;
      margin-bottom: 10px;
    }

    .main-content {
      margin-left: 220px;
      padding: 20px;
      margin-top: 60px;
    }

    @media (max-width: 767.98px) {
      #sidebar {
        transform: translateX(-100%);
      }

      #sidebar.active {
        transform: translateX(0);
      }

      .main-content {
        margin-left: 0;
        padding-top: 80px;
      }
    }
  </style>
</head>

<body class="bg-light">

  <!-- Navbar & Sidebar -->
  <%- include('partials/navbar') %>
    <%- include('../partials/sidebar') %>

      <!-- Mobile Topbar -->
      <div class="d-md-none mobile-topbar fixed-top bg-light shadow-sm">
        <div class="d-flex align-items-center justify-content-between px-3 mobile-topbar-inner">
          <img src="/image/logo.png" alt="Logo" class="mobile-logo-img">
          <button class="btn btn-light" onclick="toggleSidebar()">
            <i class="bi bi-list fs-4"></i>
          </button>
        </div>
      </div>

      <!-- Main Content -->
      <div class="main-content">
        <div class="container-fluid px-3 px-md-4">
          <div class="card shadow-sm border-0">

            <!-- Breadcrumb -->
            <nav style="--bs-breadcrumb-divider:'>';" aria-label="breadcrumb">
              <ol class="breadcrumb mb-3">
                <li class="breadcrumb-item">
                  <a href="/admin/Dashboard">Home</a>
                </li>
                <li class="breadcrumb-item">
                  <a href="/admin/viewteachers">Teachers</a>
                </li>
                <li class="breadcrumb-item active">
                  <a href="/admin/teachers/profile/<%=teacher._id%>">Teacher Profile</a>

                </li>
                <li class="breadcrumb-item active">
                  <a href="/admin/teachers/salary/<%=teacher._id%>">Salary</a>
                </li>
                <li class="breadcrumb-item active">
                  Add Salary
                </li>
              </ol>
            </nav>

            <!-- Heading -->
            <div class="card-body">

              <!-- Heading -->
              <h3 class="fw-bold mb-4 text-center" style="color:#870216;">
                ADD SALARY
              </h3>

              <!-- Salary Form -->
              <form action="/admin/teachers/salary/<%=teacher._id%>/add" method="POST" class="row g-3">

                <!-- Teacher _Id -->
                <input type="text" name="teacherId" class="form-control" value="<%=teacher._id%>" hidden>
                <!-- Teacher -->
                <div class="col-md-6">
                  <label class="form-label fw-semibold text-muted">Teacher Name</label>
                  <input type="text" name="fullName" class="form-control" value="<%=teacher.fullName%>" disabled>
                </div>

                <!-- Paid Date -->
                <div class="col-md-6">
                  <label class="form-label fw-semibold">Paid Date</label>
                  <input type="date" name="paidDate" class="form-control" required>
                </div>

                <!-- Amount -->
                <div class="col-md-6">
                  <label class="form-label fw-semibold">Amount (₹)</label>

                  <input type="number" name="amount" id="salaryInput" class="form-control"
                    placeholder="Enter salary amount" required max="<%= finalAmount %>" oninput="validateAmount(this)">

                  <div class="form-text text-success">
                    <i class="bi bi-info-circle"></i> Max payable: ₹<%= finalAmount %>
                  </div>
                </div>

                <!-- Description -->
                <div class="col-md-6">
                  <label class="form-label fw-semibold">Description</label>
                  <input type="text" name="description" class="form-control" placeholder="Eg: January Salary" required>
                </div>

                <!-- Buttons -->
                <div class="col-12 text-center mt-4">
                  <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-check-circle me-1"></i> Save Salary
                  </button>

                  <a href="/admin/teachers/salary/<%=teacher._id%>" class="btn btn-secondary px-4 ms-2">
                    Cancel
                  </a>
                </div>

              </form>

            </div>

          </div>
        </div>
      </div>

      <!-- Bootstrap JS -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
      <script>
        function toggleSidebar() {
          document.getElementById('sidebar').classList.toggle('active');
        }
        function validateAmount(input) {
          // Get the maximum value allowed (from the max attribute set by EJS)
          const maxVal = parseFloat(input.getAttribute('max')) || 0;
          const currentVal = parseFloat(input.value);

          // If user enters a number higher than max, reset it to max
          if (currentVal > maxVal) {
            input.value = maxVal;
            document.getElementById('maxAmountText').innerText =
              `Maximum payable amount is ₹${maxVal}`;

            // Show Bootstrap modal
            const modal = new bootstrap.Modal(
              document.getElementById('salaryLimitModal')
            );
            modal.show();
          }
        }
      </script>

      <!-- Salary Limit Modal -->
      <div class="modal fade" id="salaryLimitModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
              <h5 class="modal-title">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Invalid Amount
              </h5>
              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
              <p class="mb-0">
                Amount cannot exceed the total pending earnings.
              </p>
              <p class="fw-bold text-danger mt-2" id="maxAmountText"></p>
            </div>
            <div class="modal-footer justify-content-center">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                OK
              </button>
            </div>
          </div>
        </div>
      </div>


</body>

</html>