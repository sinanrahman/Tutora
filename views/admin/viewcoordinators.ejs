<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<title>View Coordinators</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
	<link rel="stylesheet" href="/css/admin/viewcoordinators.css">
</head>
<style>
  .heading{
    color: #870216;
  }
</style>
<body class="bg-light">
	<%- include('partials/sidebar') %>

		<div class="main-content">
			
			<div class="card shadow-sm">
				<div class="card-body">
					<div class="d-flex flex-column justify-content-center align-items-center mb-5">
						<h2 class="fw-bold fs-2 mb-4 heading">CO-ORDINATORS</h2>
						<a href="/admin/addcoordinators" >
							<button class="btn btn-success btn-sm">Add Coordinator</button>
						</a>
					</div>
					<div class="table-responsive">
						<table class="table table-bordered table-hover align-middle">
							<thead class="table-dark">
								<tr>
									<th>Sl No</th>
									<th>Full Name</th>
									<th>Email</th>
									<th>Phone</th>
									<th>status</th>
									<th style="width: 320px" class="text-center">Actions</th>
								</tr>
							</thead>
							<tbody>
								<% if (coordinators.length===0) { %>
									<tr>
										<td colspan="5" class="text-center text-muted">No coordinators found</td>
									</tr>
									<% } else { %>
										<% coordinators.forEach((c, i)=> { %>
											<tr>
												<td><%= i + 1 %></td>
												<td><%= c.fullName %></td>
												<td><%= c.email %></td>
												<td><%= c.phone %></td>
												<td>
													<span
														class="badge <%= c.status === 'active' ? 'bg-success' : 'bg-danger' %>">
														<%= c.status %>
													</span>
												</td>

												<td class="text-center">
													<div class="action-group">
														<a href="/admin/coordinators/edit/<%= c._id %>"
															class="btn btn-sm btn-warning">
															View
														</a>

														

														<a href="/admin/assignstudents/<%= c._id %>"
															class="btn btn-sm btn-primary">
															Assign
														</a>
													</div>
												</td>
											</tr>
										<% }) %>
									<% } %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
		<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<form id="deleteForm" method="GET">
						<div class="modal-header">
							<h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div class="modal-body">Are you sure you want to delete this coordinator?</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
								Cancel
							</button>
							<button type="submit" class="btn btn-danger">Yes, Delete</button>
						</div>
					</form>
				</div>
			</div>
		</div>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
		<script>
			const deleteModal = document.getElementById('deleteModal')
			deleteModal.addEventListener('show.bs.modal', function (event) {
				const button = event.relatedTarget
				const coordinatorId = button.getAttribute('data-id')
				const form = document.getElementById('deleteForm')
				form.action = `/admin/coordinators/delete/${coordinatorId}`
			})
		</script>
</body>

</html>