<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>View Coordinators</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

  <style>
    #sidebar {
      width: 220px;
      position: fixed;
      top: 0; left: 0;
      height: 100vh;
      background:#343a40;
      padding-top: 20px;
      overflow-y:auto;
      z-index:1000;
    }

    .main-content {
      margin-left:220px;
      padding:20px;
      min-height:100vh;
      background:#f8f9fa;
    }

    .card { border-radius:10px; }

    .table th, .table td { vertical-align:middle; }

    /* Make action buttons stay in one line */
    .action-group .btn {
      min-width: 90px;
    }

    .action-group {
      display: inline-flex;
      gap: .4rem;
      flex-wrap: nowrap;
      white-space: nowrap;
    }
  </style>
</head>

<body class="bg-light">
  <%- include('partials/sidebar') %>

  <div class="main-content">
    <h2 class="fw-bold mb-4">Coordinators List</h2>

    <div class="card shadow-sm">
      <div class="card-body">

        <div class="d-flex justify-content-end mb-3">
          <a href="/admin/addcoordinators" class="btn btn-primary">
            + Add Coordinator
          </a>
        </div>

        <div class="table-responsive">
          <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark">
              <tr>
                <th>Sl No</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th style="width:320px" class="text-center">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% if (coordinators.length === 0) { %>
                <tr>
                  <td colspan="5" class="text-center text-muted">
                    No coordinators found
                  </td>
                </tr>
              <% } else { %>
                <% coordinators.forEach((c, i) => { %>
                  <tr>
                    <td><%= i + 1 %></td>
                    <td><%= c.fullName %></td>
                    <td><%= c.email %></td>
                    <td><%= c.phone %></td>

                    <td class="text-center">
                      <div class="action-group">
                        <a href="/admin/coordinators/edit/<%= c._id %>" class="btn btn-sm btn-warning">Edit</a>

                        <!-- Delete button triggers modal -->
                        <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="<%= c._id %>">
                          Delete
                        </button>

                        <a href="/admin/assignstudents/<%= c._id %>" class="btn btn-sm btn-primary">Assign</a>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>

  <!-- Delete Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <form id="deleteForm" method="GET">
          <div class="modal-header">
            <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete this coordinator?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Delete modal
    const deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function(event) {
      const button = event.relatedTarget;
      const coordinatorId = button.getAttribute('data-id');
      const form = document.getElementById('deleteForm');
      form.action = `/admin/coordinators/delete/${coordinatorId}`;
    });
  </script>
</body>
</html>
