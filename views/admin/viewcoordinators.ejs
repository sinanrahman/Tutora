
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>View Coordinators</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    #sidebar {
      width: 220px;
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      background-color: #343a40;
      padding-top: 20px;
      overflow-y: auto;
      z-index: 1000;
    }

    #sidebar h3 {
      font-size: 1.3rem;
      text-align: center;
      margin-bottom: 20px;
      color: #fff;
    }

    #sidebar .nav-link {
      color: white;
      padding: 10px 20px;
      display: block;
      text-decoration: none;
    }

    #sidebar .nav-link:hover,
    #sidebar .nav-link.active {
      background-color: #495057;
      border-radius: 5px;
    }
    .main-content {
      margin-left: 220px;
      padding: 20px;
      min-height: 100vh;
      background-color: #f8f9fa;
    }
    .card {
      border-radius: 10px;
    }

    .table th,
    .table td {
      vertical-align: middle;
    }

    .table-responsive {
      overflow-x: auto;
    }
  </style>
</head>

<body class="bg-light">
  <%- include('sidebar') %>
  <div class="main-content">
    <h2 class="fw-bold mb-4">Coordinators List</h2>
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-end mb-3">
          <a href="/admin/addcoordinators" class="btn btn-primary">
            + Add Coordinator
          </a>
        </div>
        <div class="table-responsive">
          <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark">
              <tr>
                <th>Sl No</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Created By</th>
                <th width="260">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% if (coordinators.length === 0) { %>
                <tr>
                  <td colspan="6" class="text-center text-muted">
                    No coordinators found
                  </td>
                </tr>
              <% } else { %>
                <% coordinators.forEach((c, i) => { %>
                  <tr>
                    <td><%= i + 1 %></td>
                    <td><%= c.fullName %></td>
                    <td><%= c.email %></td>
                    <td><%= c.phone %></td>
                    <td><%= c.createdBy ? c.createdBy.fullName + ' (' + c.createdBy.email + ')' : 'â€”' %></td>
                    <td>
                      <div class="d-flex gap-2 flex-wrap">
                        <a href="/admin/coordinators/edit/<%= c._id %>" class="btn btn-sm btn-warning">Edit</a>
                        <a href="/admin/coordinators/delete/<%= c._id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this coordinator?')">Delete</a>
                        <a href="/admin/assign/assign-students/<%= c._id %>" class="btn btn-sm btn-primary">Assign Students</a>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</body>

</html>
