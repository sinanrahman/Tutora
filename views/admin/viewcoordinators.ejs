<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>View Coordinators</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

  <style>
    #sidebar {
      width: 220px;
      position: fixed;
      top: 0; left: 0;
      height: 100vh;
      background:#343a40;
      padding-top: 20px;
      overflow-y:auto;
      z-index:1000;
    }

    .main-content {
      margin-left:220px;
      padding:20px;
      min-height:100vh;
      background:#f8f9fa;
    }

    .card { border-radius:10px; }

    .table th, .table td { vertical-align:middle; }

    /* Make action buttons stay in one line */
    .action-group .btn {
      min-width: 90px;
    }

    .action-group {
      display: inline-flex;
      gap: .4rem;
      flex-wrap: nowrap;
      white-space: nowrap;
    }
  </style>
</head>

<body class="bg-light">
  <%- include('sidebar') %>

  <div class="main-content">
    <h2 class="fw-bold mb-4">Coordinators List</h2>

    <div class="card shadow-sm">
      <div class="card-body">

        <div class="d-flex justify-content-end mb-3">
          <a href="/admin/addcoordinators" class="btn btn-primary">
            + Add Coordinator
          </a>
        </div>

        <div class="table-responsive">
          <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark">
              <tr>
                <th>Sl No</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th style="width:320px" class="text-center">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% if (coordinators.length === 0) { %>
                <tr>
                  <td colspan="5" class="text-center text-muted">
                    No coordinators found
                  </td>
                </tr>
              <% } else { %>
                <% coordinators.forEach((c, i) => { %>
                  <tr>
                    <td><%= i + 1 %></td>
                    <td><%= c.fullName %></td>
                    <td><%= c.email %></td>
                    <td><%= c.phone %></td>

                    <td class="text-center">
                      <div class="action-group">
                        <a href="/admin/coordinators/edit/<%= c._id %>" class="btn btn-sm btn-warning">Edit</a>

                        <a href="/admin/coordinators/delete/<%= c._id %>"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this coordinator?')">
                          Delete
                        </a>

                        <a href="/admin/assign/assign-students/<%= c._id %>"
                           class="btn btn-sm btn-primary">
                          Assign
                        </a>

                        <a href="/admin/coordinators/reset/<%= c._id %>"
                           class="btn btn-sm btn-secondary"
                           onclick="return confirm('Reset this coordinator?')">
                          Reset
                        </a>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</body>
</html>
